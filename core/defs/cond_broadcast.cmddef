COMMAND reconos_cond_broadcast

    SYMBOL      OSIF_CMD_COND_BROADCAST
    ENCODING    0x05
    TYPE        TASK2OS
    # NO OPTIONS


    DELEGATE ecos_ecos
        HOST_OS             ecos
        RESTYPE             CYG_COND_T
        HEADER              <cyg/kernel/kapi.h>
        HEADER              <cyg/infra/cyg_type.h>
        CODE                "cyg_cond_broadcast((cyg_cond_t *)$resources[$data].ptr);"
    END # ecos.ecos


    DELEGATE ecos_posix
        HOST_OS             ecos
        RESTYPE             PTHREAD_COND_T
        HEADER              <cyg/posix/types.h>
        HEADER              <cyg/posix/pthread.h>
        IFDEF               UPBFUN_RECONOS_POSIX
        CODE                "pthread_cond_broadcast((pthread_cond_t*) $resources[$data].ptr);"
    END # ecos.posix

END # reconos_cond_broadcast
