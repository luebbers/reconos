COMMAND reconos_mutex_trylock

    SYMBOL      OSIF_CMD_MUTEX_TRYLOCK
    ENCODING    0x83
    TYPE        TASK2OS
    OPTIONS     RETVAL


    DELEGATE ecos_ecos
        HOST_OS             ecos
        RESTYPE             CYG_MUTEX_T
        HEADER              <cyg/kernel/kapi.h>
        HEADER              <cyg/infra/cyg_type.h>
        CODE                "$retval = (uint32)cyg_mutex_trylock((cyg_mutex_t *)$resources[$data].ptr);"
    END # ecos.ecos


    DELEGATE ecos_posix
        HOST_OS             ecos
        RESTYPE             PTHREAD_MUTEX_T
        HEADER              <cyg/posix/types.h>
        HEADER              <cyg/posix/pthread.h>
        IFDEF               UPBFUN_RECONOS_POSIX
        CODE                "retval = pthread_mutex_trylock((pthread_mutex_t*) $resources[$data].ptr);"
    END # ecos.posix

END # reconos_mutex_trylock
